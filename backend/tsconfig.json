{
  "compilerOptions": {
    "module": "CommonJS",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,

    /* KATILAŞTIRMA AYARLARI */
    "strict": true, // Bu ayarı 'true' yapıyoruz.
    "forceConsistentCasingInFileNames": true // Bu da her zaman 'true' olmalı.

    // "strict": true bunları zaten kapsadığı için,
    // aşağıdaki satırları silebilir veya false bırakabilirsiniz.
    // "strictNullChecks": false,
    // "noImplicitAny": false,
    // "strictBindCallApply": false,
    // "noFallthroughCasesInSwitch": false
  }
}
